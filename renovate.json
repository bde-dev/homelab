{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "flux": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchPaths": [
        "clusters/**"
      ],
      "addLabels": [
        "flux"
      ]
    },
    {
      "matchPaths": [
        "infrastructure/**"
      ],
      "addLabels": [
        "infrastructure"
      ]
    },
    {
      "matchPaths": [
        "monitoring/**"
      ],
      "addLabels": [
        "monitoring"
      ]
    },
    {
      "matchPaths": [
        "apps/**"
      ],
      "addLabels": [
        "apps"
      ]
    },
    {
      "matchPaths": [
        "mise.toml"
      ],
      "addLabels": [
        "mise"
      ]
    },
    {
      "description": "Disable Renovate under flux-system",
      "matchPaths": [
        "clusters/olympus/flux-system/**"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "cloudflare/cloudflared"
      ],
      "addLabels": [
        "infrastructure"
      ]
    }
  ]
}
