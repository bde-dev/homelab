{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchPaths": [
        "clusters/**"
      ],
      "addLabels": [
        "flux"
      ]
    },
    {
      "matchPaths": [
        "infrastructure/**"
      ],
      "addLabels": [
        "infrastructure"
      ]
    },
    {
      "matchPaths": [
        "apps/**"
      ],
      "addLabels": [
        "apps"
      ]
    }
  ]
}
